{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "declaration": true,
    "declarationMap": true,
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "rootDir": "./src",
    "composite": true,
    "skipLibCheck": true,
    "typeRoots": ["./node_modules/@types"],
    "lib": ["es2017", "dom"] // Add ES2017 to include Object.values()
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
